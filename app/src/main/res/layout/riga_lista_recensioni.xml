<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:minHeight="135dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewStruttura"
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/marcellus"
            android:maxHeight="75dp"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/struttura"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#18592E"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewStruttura"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/immagine_struttura"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_disabled" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewRecensione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/marcellus"
        android:padding="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="8dp"
        android:paddingRight="5dp"
        android:text="@string/testo_recensione"
        android:textColor="#18592E"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewValutazione"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:shadowColor="#ACE8C0"
        android:text="@string/valutazione"
        android:fontFamily="@font/marcellus"
        android:textColor="#18592E"
        android:textStyle="bold" />
</LinearLayout>