<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/castello"
    android:orientation="vertical"
    tools:context=".Activities.Activity_riepilogo_recensioni">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ListaRecensioni"
        android:layout_width="match_parent"
        android:layout_height="580dp" />

    <TextView
        android:id="@+id/buttonIndietro"
        android:layout_width="146dp"
        android:fontFamily="@font/marcellus"
        android:textColor="#18592E"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:onClick="indietroIsClicked"
        android:text="@string/Indietro" />


</LinearLayout>